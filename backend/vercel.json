{
  "version": 2,
  "buildCommand": "npm run build",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/[...path]"
    },
    {
      "source": "/api",
      "destination": "/api/index"
    }
  ],
  "functions": {
    "api/[...path].js": {
      "maxDuration": 30
    },
    "api/index.js": {
      "maxDuration": 30
    }
  }
}
